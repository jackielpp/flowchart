     "options": ["Red blood cells", "Platelets", "Plasma", "White blood cells"], "answer": 3}
]

random.shuffle(chemistry)
random.shuffle(biology)
random.shuffle(boss_quiz)

# ğŸ¬ Intro
def intro():
    print("ğŸ”® Welcome to...")
    time.sleep(1)
    print("ğŸ•¸ï¸  SHANTI'S DUNGEON ğŸ•¸ï¸")
    time.sleep(2)
    print("\nYou awaken in a dimly lit dungeon filled with strange symbols.")
    print("A voice echoes: 'To escape, you must prove your mastery of knowledge!'")
    print("You have 3 â¤ï¸ lives. Lose them all, and you will remain here forever... ğŸ˜ˆ\n")
    time.sleep(2)

# ğŸ§ª Quiz Engine
def run_quiz(quiz, subject_name):
    score = 0
    lives = 3
    for i, q in enumerate(quiz, 1):
        print(f"\nğŸ§ª Gate {i} - {subject_name} Challenge")
        print(f"{q['question']}")
        for idx, option in enumerate(q['options']):
            print(f"  {idx + 1}. {option}")
        while True:
            answer = input("Choose your answer (1-4): ")
            if answer not in ['1', '2', '3', '4']:
                print("âš ï¸ Enter a valid number between 1 and 4.")
                continue
            answer = int(answer) - 1
            if answer == q['answer']:
                print("âœ… Correct! The gate opens...")
                score += 1
                time.sleep(1)
            else:
                correct = q['options'][q['answer']]
                print(f"âŒ Wrong! The dungeon growls. Correct answer: {correct}")
                lives -= 1
                print(f"ğŸ’” Lives remaining: {lives}")
                time.sleep(1)
            break
        if lives == 0:
            print("\nğŸ’€ You've lost all your lives. The dungeon consumes your soul... GAME OVER.")
            return False
    print(f"\nğŸ‰ You passed all the {subject_name} gates!")
    print(f"ğŸ† Score: {score}/{len(quiz)}")
    return True

# â±ï¸ Timer Input for Rapid Fire
def timed_input(prompt, timeout=10):
    result = [None]
    def get_input():
        result[0] = input(prompt)
    thread = threading.Thread(target=get_input)
    thread.start()
    thread.join(timeout)
    if thread.is_alive():
        print("\nâ° Time's up!")
        return None
    return result[0]

# ğŸ”¥ Boss Fight (Rapid Fire Mode)
def fight_boss():
    print("\nğŸ”¥ A towering figure emerges from the shadows...")
    time.sleep(1)
    print("ğŸ’€ 'I am Shanti, the keeper of this dungeon!'")
    print("ğŸ§™â€â™€ï¸ 'Only those worthy may leave. Answer my riddles... in 10 seconds each!'")
    time.sleep(2)

    score = 0
    for i, q in enumerate(boss_quiz, 1):
        print(f"\nâš”ï¸ Rapid Fire Question {i}: {q['question']}")
        for idx, option in enumerate(q['options']):
            print(f"  {idx + 1}. {option}")

        answer = timed_input("â±ï¸ Your answer (1-4): ", timeout=10)
        if not answer or answer not in ['1', '2', '3', '4']:
            print("âŒ No valid answer received.")
            continue

        answer = int(answer) - 1
        if answer == q['answer']:
            print("âœ… Correct! Shanti trembles...")
            input("Press enter to continue")
            score += 1
        else:
            print(f"âŒ Wrong! Correct answer: {q['options'][q['answer']]}")
            input("Press enter to continue")

    print(f"\nğŸ Rapid Fire Complete! You got {score}/5 right.")
    if score >= 3:
        print("ğŸŒŸ You have defeated Shanti!")
        print("ğŸ”“ The dungeon gates open... You're free!")
        print("ğŸ‰ CONGRATULATIONS, HERO!")
    else:
        print("ğŸ’€ Shanti laughs: 'You are not ready!'")
        print("ğŸ”’ The dungeon seals itself. You are trapped forever...")
        print("GAME OVER.")

# ğŸ® Main Game Loop
def game():
    intro()
    while True:
        print("\nWhich path will you take?")
        print(" 1. The Alchemist's Corridor (Chemistry)")
        print(" 2. The Healer's Hall (Biology)")
        print(" 0. Surrender and Exit")
        choice = input("Choose your path (0â€“2): ")

        if choice == '1':
            survived = run_quiz(chemistry, "Chemistry")
            if survived:
                print("\nâœ¨ You escape the Alchemist's Corridor!")
                fight_boss()
            break
        elif choice == '2':
            survived = run_quiz(biology, "Biology")
            if survived:
                print("\nğŸ§ You escape the Healer's Hall!")
                fight_boss()
            break
        elif choice == '0':
            print("\nYou sit down and accept your fate in the dungeon...")
            print("The voice whispers: 'Perhaps another time...' ğŸ‘»")
            break
        else:
            print("âš ï¸ Invalid choice. Try again.")

# ğŸ•¹ï¸ Run the Game
if __name__ == "__main__":
    game()

